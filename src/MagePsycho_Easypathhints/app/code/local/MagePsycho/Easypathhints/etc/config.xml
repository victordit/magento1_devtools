<config>
    <modules>
        <MagePsycho_Easypathhints>
            <version>0.3.0</version>
        </MagePsycho_Easypathhints>
    </modules>
    <global>
        <models>
            <easypathhints>
                <class>MagePsycho_Easypathhints_Model</class>
            </easypathhints>
        </models>
        <blocks>
            <easypathhints>
                <class>MagePsycho_Easypathhints_Block</class>
            </easypathhints>
        </blocks>
        <helpers>
            <easypathhints>
                <class>MagePsycho_Easypathhints_Helper</class>
            </easypathhints>
        </helpers>
		<events>
			<core_block_abstract_to_html_after>
				<observers>
					<easypathhints_core_block_abstract_to_html_after>
						<class>easypathhints/observer</class>
						<method>setTemplatePathHints</method>
					</easypathhints_core_block_abstract_to_html_after>
				</observers>
			</core_block_abstract_to_html_after>
		</events>
    </global>
    <frontend>
        <routers>
            <easypathhints>
                <use>standard</use>
                <args>
                    <module>MagePsycho_Easypathhints</module>
                    <frontName>easypathhints</frontName>
                </args>
            </easypathhints>
        </routers>
    </frontend>
    <default>
        <easypathhints>
            <option>
                <active>1</active>
                <code>magento</code>
            </option>
        </easypathhints>
    </default>
</config>